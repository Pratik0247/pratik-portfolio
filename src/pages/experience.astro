---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const experience = await getCollection("experience");
---
<BaseLayout title="Experience">
  <h1 class="text-3xl font-extrabold tracking-tight text-[var(--ghost-white)]">Experience</h1>
  <p class="mt-2 text-[var(--light-blue)]">Roles, responsibilities, and impact across companies.</p>

  <div class="mt-10 space-y-10">
    {experience.map((exp) => (
      <section
        class="rounded-2xl 
               bg-[var(--color-surface-blur)] 
               backdrop-blur-md 
               border border-[var(--paynes-gray)]/30 
               shadow-md shadow-black/60 
               hover:border-[var(--light-blue)] 
               hover:shadow-[0_0_20px_var(--light-blue)] 
               transition p-6"
      >
        <h2 class="text-xl font-bold text-[var(--ghost-white)]">
          {exp.data.company} â€” {exp.data.role}
        </h2>
        <p class="text-sm text-[var(--light-blue)] mt-1">{exp.data.period}</p>

        {exp.data.highlights && (
          <ul class="mt-4 list-disc pl-5 space-y-2">
            {exp.data.highlights.map((h) => (
              <li class="text-sm leading-relaxed text-[var(--light-blue)]">{h}</li>
            ))}
          </ul>
        )}
      </section>
    ))}
  </div>
</BaseLayout>
