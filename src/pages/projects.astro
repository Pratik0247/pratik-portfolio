---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const projects = await getCollection("projects");
---
<BaseLayout title="Projects">
  <h1 class="text-3xl font-extrabold tracking-tight text-[var(--ghost-white)]">Projects</h1>
  <p class="mt-2 text-[var(--light-blue)]">Case studies of systems, infra, and AI projects.</p>

  <div class="mt-10 space-y-10">
    {projects.map((p) => (
      <section
        class="rounded-2xl 
               bg-[var(--color-surface-blur)] 
               backdrop-blur-md 
               border border-[var(--paynes-gray)]/30 
               shadow-md shadow-black/60 
               hover:border-[var(--light-blue)] 
               hover:shadow-[0_0_20px_var(--light-blue)] 
               transition p-6"
      >
        <h2 class="text-xl font-bold text-[var(--ghost-white)]">{p.data.title}</h2>

        {p.data.stack && (
          <div class="mt-3 flex flex-wrap gap-2">
            {p.data.stack.map((tech) => (
              <span
                class="px-2 py-1 text-xs rounded-full 
                       bg-[var(--paynes-gray)]/50 
                       border border-[var(--light-blue)]/30 
                       text-[var(--ghost-white)]"
              >
                {tech}
              </span>
            ))}
          </div>
        )}

        {p.data.summary && (
          <p class="mt-4 text-sm leading-relaxed text-[var(--light-blue)]">
            {p.data.summary}
          </p>
        )}

        {p.body && (
          <div class="mt-5">
            <a
              href={`/projects/${p.slug}`}
              class="text-sm text-[var(--light-blue)] hover:text-[var(--ghost-white)] hover:underline"
            >
              Read more â†’
            </a>
          </div>
        )}
      </section>
    ))}
  </div>
</BaseLayout>
