            <h3 class="text-xl font-bold text-[var(--ghost-white)]">
              {p.data.title}
            </h3>
            <p class="text-sm text-[var(--light-blue)]">{p.data.summary}</p>
            <a
              href={`/projects/${p.slug}`}
