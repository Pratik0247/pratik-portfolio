---
import { getCollection } from "astro:content";
import FloatingNav from "../components/FloatingNav.astro";
import ResumeMenu from "../components/ResumeMenu.astro";
import BaseLayout from "../layouts/BaseLayout.astro";

const experience = await getCollection("experience");
const projects = await getCollection("projects");
const leadership = await getCollection("leadership"); // we can add this collection

// Sort experience by start date in descending order (most recent first)
const sortedExperience = experience.sort((a, b) => {
  return b.data.start.localeCompare(a.data.start);
});
---

<BaseLayout title="Home">
  <!-- Hero -->
  <section
    id="hero"
    class="h-screen flex flex-col justify-center items-center text-center px-6"
  >
    <h1 class="text-5xl font-extrabold text-[var(--ghost-white)]">
      Pratik â€” Software Engineer
    </h1>
    <p class="mt-4 text-lg text-[var(--light-blue)] max-w-2xl">
      I design and build data systems, cloud infrastructure, and ML-powered
      applications. Currently pursuing my MS in Computer Science at CU Boulder.
    </p>
    <div class="mt-6 flex flex-wrap justify-center gap-4">
      <ResumeMenu label="Download Resume" id="hero" />
      <a href="#experience" class="btn liquid-glass-btn">See Experience</a>
      <a href="#projects" class="btn liquid-glass-btn">See Projects</a>
      <a href="#contact" class="btn liquid-glass-btn">Contact Me</a>
    </div>
  </section>

  <!-- Experience -->
  <section id="experience" class="py-20 px-6">
    <h2 class="text-3xl font-bold text-[var(--ghost-white)] mb-10">
      Experience
    </h2>
    <div class="space-y-6 md:space-y-8">
      {
        sortedExperience.map((exp, index) => (
          <div class="card">
            <div class="flex flex-col md:flex-row md:items-start md:justify-between mb-3 gap-2">
              <h3 class="text-lg md:text-xl font-bold text-[var(--ghost-white)] leading-tight">
                {exp.data.company} â€” {exp.data.role}
