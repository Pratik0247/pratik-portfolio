---
import BaseLayout from "../layouts/BaseLayout.astro";
import FloatingNav from "../components/FloatingNav.astro";
import { getCollection } from "astro:content";

const experience = await getCollection("experience");
const projects = await getCollection("projects");
const leadership = await getCollection("leadership"); // we can add this collection
---

<BaseLayout title="Home">
  <!-- Hero -->
  <section
    id="hero"
    class="h-screen flex flex-col justify-center items-center text-center px-6"
  >
    <h1 class="text-5xl font-extrabold text-[var(--ghost-white)]">
      Pratik â€” Software Engineer
    </h1>
    <p class="mt-4 text-lg text-[var(--light-blue)] max-w-2xl">
      I design and build data systems, cloud infrastructure, and ML-powered
      applications. Currently pursuing my MS in Computer Science at CU Boulder.
    </p>
    <div class="mt-6 flex flex-wrap justify-center gap-4">
      <a href="/resume" class="btn">View Resume</a>
      <a href="#experience" class="btn">See Experience</a>
      <a href="#projects" class="btn">See Projects</a>
      <a href="#contact" class="btn">Contact Me</a>
    </div>
  </section>

  <!-- Experience -->
  <section id="experience" class="py-20 px-6">
    <h2 class="text-3xl font-bold text-[var(--ghost-white)] mb-10">
      Experience
    </h2>
    <div class="space-y-8">
      {
        experience.map((exp) => (
          <div class="card">
            <h3 class="text-xl font-bold text-[var(--ghost-white)]">
              {exp.data.company} â€” {exp.data.role}
            </h3>
            <p class="text-sm text-[var(--light-blue)]">{exp.data.period}</p>
            <ul class="mt-3 list-disc list-inside text-[var(--light-blue)] space-y-1">
              {exp.data.highlights?.map((h) => (
                <li>{h}</li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
  </section>

  <!-- Projects -->
  <section id="projects" class="py-20 px-6">
    <h2 class="text-3xl font-bold text-[var(--ghost-white)] mb-10">Projects</h2>
    <div class="space-y-8">
      {
        projects.map((p) => (
          <div class="card">
            <h3 class="text-xl font-bold text-[var(--ghost-white)]">
              {p.data.title}
            </h3>
            <p class="text-sm text-[var(--light-blue)]">{p.data.summary}</p>
            <a
              href={`/projects/${p.slug}`}
              class="text-sm text-[var(--light-blue)] hover:text-[var(--ghost-white)] hover:underline mt-2 inline-block"
            >
              Read more â†’
            </a>
          </div>
        ))
      }
    </div>
  </section>

  <!-- Leadership -->
  <section id="leadership" class="py-20 px-6">
    <h2 class="text-3xl font-bold text-[var(--ghost-white)] mb-10">
      Leadership & Involvement
    </h2>
    <div class="space-y-8">
      {
        leadership.map((l) => (
          <div class="card">
            <h3 class="text-xl font-bold text-[var(--ghost-white)]">
              {l.data.company} â€” {l.data.role}
            </h3>
            <p class="text-sm text-[var(--light-blue)]">{l.data.period}</p>
            <ul class="mt-3 list-disc list-inside text-[var(--light-blue)] space-y-1">
              {l.data.highlights?.map((h) => (
                <li>{h}</li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
  </section>

  <!-- Contact -->
  <section id="contact" class="py-20 px-6 text-center">
    <h2 class="text-3xl font-bold text-[var(--ghost-white)] mb-10">
      Get in Touch
    </h2>

    <div class="card inline-block text-center max-w-lg mx-auto space-y-6">
      <p class="text-[var(--light-blue)]">
        Always happy to connect â€” reach me on any platform below:
      </p>

      <div class="flex justify-center gap-4 flex-wrap">
        <a
          href="mailto:pratik@example.com"
          class="px-4 py-2 rounded-xl border border-white/10
               bg-white/5 backdrop-blur-md text-[var(--light-blue)]
               hover:border-[var(--light-blue)] hover:text-[var(--ghost-white)]
               hover:shadow-[0_0_10px_var(--light-blue)] transition"
        >
          ðŸ“§ Email
        </a>

        <a
          href="https://linkedin.com/in/pratik"
          target="_blank"
          class="px-4 py-2 rounded-xl border border-white/10
               bg-white/5 backdrop-blur-md text-[var(--light-blue)]
               hover:border-[var(--light-blue)] hover:text-[var(--ghost-white)]
               hover:shadow-[0_0_10px_var(--light-blue)] transition"
        >
          ðŸ”— LinkedIn
        </a>

        <a
          href="https://github.com/pratik"
          target="_blank"
          class="px-4 py-2 rounded-xl border border-white/10
               bg-white/5 backdrop-blur-md text-[var(--light-blue)]
               hover:border-[var(--light-blue)] hover:text-[var(--ghost-white)]
               hover:shadow-[0_0_10px_var(--light-blue)] transition"
        >
          ðŸ–¥ GitHub
        </a>
      </div>
    </div>
  </section>

  <FloatingNav />
</BaseLayout>
